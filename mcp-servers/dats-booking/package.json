{
  "name": "dats-booking-mcp",
  "version": "1.0.0",
  "description": "MCP server for DATS accessible booking automation",
  "type": "module",
  "main": "build/index.js",
  "bin": {
    "dats-booking-mcp": "./build/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node build/index.js",
    "dev": "tsc --watch",
    "test": "vitest run --exclude 'src/__tests__/e2e/**'",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage --exclude 'src/__tests__/e2e/**'",
    "test:e2e": "vitest run --config vitest.e2e.config.ts",
    "test:all": "vitest run",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "dependencies": {
    "@azure/cosmos": "^4.2.0",
    "@azure/identity": "^4.5.0",
    "@modelcontextprotocol/sdk": "^1.12.1",
    "cors": "^2.8.5",
    "express": "^4.21.0",
    "open": "^10.1.0",
    "playwright": "^1.40.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^22.19.6",
    "@vitest/coverage-v8": "^1.6.1",
    "typescript": "^5.7.0",
    "vitest": "^1.6.1"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
